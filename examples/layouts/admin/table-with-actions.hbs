<table class="govuk-table">
  <caption class="govuk-table__caption govuk-visually-hidden">Frameworks</caption>
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th class="govuk-table__header" scope="col">Framework</th>
      <th class="govuk-table__header" scope="col">Number of suppliers</th>
      <th class="govuk-table__header" scope="col">Status</th>
      <th class="govuk-table__header" scope="col">Actions</th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    {{#each frameworks as |framework|}}
      <tr class="govuk-table__row">
        <td class="govuk-table__cell">{{framework.short_name}} {{framework.name}}</td>
        <td class="govuk-table__cell">{{framework.supplier_count}}</td>
        <td class="govuk-table__cell">{{framework.status}}</td>
        <td class="govuk-table__cell">{{>@table-actions}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
